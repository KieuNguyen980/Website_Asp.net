@model IEnumerable<MyClass.Models.User>

@{
    ViewBag.Title = "Thùng rác khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Main content -->
<section class="content my-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger text-uppercase">THÙNG RÁC KHÁCH HÀNG</strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Index", "User")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i>Về danh sách</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @Html.Partial("Message")
            <table class="table table-bordered table-striped" id="myTable">
                <thead>
                    <tr>
                        <th class="text center" style="width:20px;">#</th>
                        <th>Tên khách hàng</th>
                        <th>Tên tài khoản</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Ngày tạo</th>
                        <th class="text center" style="width:180px;">Chức năng</th>
                        <th class="text center" style="width:20px;">ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td><input type="checkbox" name="checkId" value="" /></td>
                        <td>@item.FullName</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Retrash","Category", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-undo-alt"></i></a>
                            <a href="@Url.Action("Delete","Category", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                        <td>@item.Id</td>
                    </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
    <!-- /.card -->

</section>

<!-- /.content -->
<!-- /.content-wrapper -->
